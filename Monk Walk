import java.util.*;

class TestClass {
    public static void main(String args[] ) throws Exception {
        Scanner s = new Scanner(System.in);
        int T = s.nextInt();
        
        for (int i = 0; i < T; i++) {
            String letters = s.next();
            char[] letter = letters.toCharArray();
            int vowelCount = 0;    
            for (int j = 0; j < letters.length(); j++) {
                switch(letter[j]) {
                    case 'a' : vowelCount++;
                        break;
                    case 'e' : vowelCount++;
                        break;
                    case 'i' : vowelCount++;
                        break;
                    case 'o' : vowelCount++;
                        break;
                    case 'u' : vowelCount++;
                        break;
                    case 'A' : vowelCount++;
                        break;
                    case 'E' : vowelCount++;
                        break;
                    case 'I' : vowelCount++;
                        break;
                    case 'O' : vowelCount++;
                        break;
                    case 'U' : vowelCount++;
                        break;
                    default : 
                        break;
                }
            }
            System.out.println(vowelCount);
        }
    }
}
